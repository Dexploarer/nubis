{
  "name": "@elizaos/plugin-social-raids",
  "version": "0.1.0",
  "description": "Comprehensive Twitter/Telegram social raids coordination plugin for ElizaOS with engagement tracking, community memory, and leaderboards",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest"
  },
  "keywords": [
    "elizaos",
    "plugin",
    "social",
    "raids",
    "twitter",
    "telegram",
    "engagement",
    "community",
    "coordination"
  ],
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@supabase/supabase-js": "^2.0.0",
    "agent-twitter-client": "^0.0.13",
    "telegraf": "^4.12.2",
    "puppeteer": "^21.0.0",
    "node-cron": "^3.0.3",
    "fs": "0.0.1-security"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/jest": "^29.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0"
  },
  "peerDependencies": {
    "node": ">=18.0.0"
  },
  "elizaos": {
    "type": "plugin",
    "services": [
      "TwitterRaidService",
      "TelegramRaidManager", 
      "EngagementTracker",
      "CommunityMemoryService",
      "LeaderboardService"
    ],
    "actions": [
      "startRaid",
      "joinRaid", 
      "submitEngagement",
      "viewLeaderboard",
      "checkRaidStatus",
      "submitTwitterLink"
    ],
    "providers": [
      "RaidStatusProvider",
      "UserStatsProvider",
      "EngagementMetricsProvider",
      "CommunityMemoryProvider"
    ],
    "evaluators": [
      "EngagementQualityEvaluator",
      "CommunityImpactEvaluator", 
      "RaidSuccessEvaluator"
    ]
  }
}

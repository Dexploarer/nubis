# Database Configuration
# The SQL plugin will use these environment variables for database connections
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
ELIZAOS_DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# ElizaOS Configuration
ELIZAOS_AGENT_ID="your-agent-id"
ELIZAOS_ROOM_ID="your-room-id"

# API Keys for AI Services (optional)
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_GENERATIVE_AI_API_KEY="your-google-genai-api-key"
OPENROUTER_API_KEY="your-openrouter-api-key"

# Platform Integration (optional)
DISCORD_API_TOKEN="your-discord-bot-token"
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHANNEL_ID="@your-channel"
TELEGRAM_TEST_CHANNEL="@your-test-channel"
# Dedicated Raid Bot (recommended when running multiple Telegram bots)
TELEGRAM_RAID_BOT_TOKEN="your-raid-telegram-bot-token"
TELEGRAM_RAID_CHANNEL_ID="@your-raid-channel"
# Passive mode avoids polling getUpdates to prevent 409 conflicts ("true" enables)
TELEGRAM_RAID_PASSIVE="false"
TELEGRAM_PASSIVE_MODE="false"
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET_KEY="your-twitter-api-secret"
TWITTER_ACCESS_TOKEN="your-twitter-access-token"
TWITTER_ACCESS_TOKEN_SECRET="your-twitter-access-token-secret"

## Redis Configuration
# Redis connection for enhanced caching and performance
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_MAX_MEMORY="256mb"
REDIS_KEY_PREFIX="elizaos:"
REDIS_EVICTION_POLICY="allkeys-lru"

# Redis TTL Configuration (ElizaOS pattern)
REDIS_TTL_SHORT="300"      # 5 minutes for frequently accessed data
REDIS_TTL_MEDIUM="3600"    # 1 hour for moderately accessed data  
REDIS_TTL_LONG="86400"     # 24 hours for rarely accessed data

# Connection Pool Settings
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_ACQUIRE_TIMEOUT=30000
REDIS_CREATE_TIMEOUT=30000
REDIS_DESTROY_TIMEOUT=5000
REDIS_IDLE_TIMEOUT=30000
REDIS_REAP_INTERVAL=1000
REDIS_CREATE_RETRY_INTERVAL=200

# Webhook URLs (optional)
WEBHOOK_PROCESSOR_URL="https://your-domain.com/webhook-processor"
ANALYTICS_ENGINE_URL="https://your-domain.com/analytics-engine"
RAID_COORDINATOR_URL="https://your-domain.com/raid-coordinator"
SECURITY_FILTER_URL="https://your-domain.com/security-filter"
TASK_QUEUE_URL="https://your-domain.com/task-queue"
PERSONALITY_EVOLUTION_URL="https://your-domain.com/personality-evolution"

# ======================================
# ElizaOS Agent Configuration Template
# ======================================
# Copy this file to .env and configure your values
# All values are examples - replace with your actual credentials

# ===== ENVIRONMENT SETTINGS =====
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ===== AI MODEL PROVIDERS =====
# At least one AI provider is required for basic functionality
OPENAI_API_KEY=sk-your-openai-api-key-here
# For OpenAI-compatible endpoints (e.g., inference.do-ai.run), set base URL:
OPENAI_BASE_URL=https://inference.do-ai.run/v1
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-key-here

# Model Configuration
# Use Meta Llama models by default
DEFAULT_MODEL=llama3.3-70b-instruct
FALLBACK_MODEL=llama3-8b-instruct
MAX_TOKENS=2048
TEMPERATURE=0.7

# ===== DATABASE CONFIGURATION =====
# Primary database - choose one of the following options:

# Option 1: Supabase (Recommended for production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_TRANSACTION_POOLER_URL=postgresql://postgres.project:[password]@aws-0-region.pooler.supabase.com:6543/postgres
SUPABASE_SESSION_POOLER_URL=postgresql://postgres.project:[password]@aws-0-region.pooler.supabase.com:5432/postgres

# Option 2: PostgreSQL (Direct connection)
DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_URL=postgresql://username:password@localhost:5432/your_agent_db

# Option 3: Local Development (SQLite/PGLite)
PGLITE_DATA_DIR=./data
# PGLITE_DATA_DIR=memory://

# ===== SOCIAL MEDIA INTEGRATIONS =====

# Twitter/X Integration (XMCPX Enhanced)
TWITTER_USERNAME=your-twitter-username
TWITTER_PASSWORD=your-secure-password
TWITTER_EMAIL=your-twitter-email@domain.com
# Cookie storage for persistent authentication (auto-populated)
TWITTER_COOKIES=[]
AUTH_METHOD=credentials

# Discord Integration
DISCORD_APPLICATION_ID=your-discord-application-id
DISCORD_API_TOKEN=your-discord-bot-token
DISCORD_WEBHOOK_SECRET=your-webhook-secret
ENABLE_DISCORD_BOT=true

# Telegram Integration  
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHANNEL_ID=@your-channel
TELEGRAM_TEST_CHANNEL=@your-test-channel

# ===== EDGE FUNCTIONS & MICROSERVICES =====
EDGE_FUNCTIONS_ENABLED=true

# Webhook and Processing Services
WEBHOOK_PROCESSOR_URL=https://your-project-id.supabase.co/functions/v1/webhook-processor
ANALYTICS_ENGINE_URL=https://your-project-id.supabase.co/functions/v1/analytics-engine
SECURITY_FILTER_URL=https://your-project-id.supabase.co/functions/v1/security-filter
TASK_QUEUE_URL=https://your-project-id.supabase.co/functions/v1/task-queue

# Advanced Features
RAID_COORDINATOR_URL=https://your-project-id.supabase.co/functions/v1/raid-coordinator
PERSONALITY_EVOLUTION_URL=https://your-project-id.supabase.co/functions/v1/personality-evolution

# ===== SECURITY & ENCRYPTION =====
# Generate secure keys using: openssl rand -base64 32
ENCRYPTION_KEY=your-base64-encryption-key
JWT_SECRET=your-jwt-secret-key
API_KEY=your-custom-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_ENABLED=true

# ===== CHARACTER CONFIGURATION =====
# Agent personality and behavior settings
CHARACTER_NAME=Your Agent Name
CHARACTER_DESCRIPTION=Your agent description
AGENT_PERSONA=helpful,witty,knowledgeable
COMMUNITY_NAME=Your Community
ORGANIZATION_NAME=Your Organization

# Character Behavior
CHARACTER_VALIDATION=true
PLUGIN_VALIDATION=true
FOURTH_WALL_BREAKS_ENABLED=true
TOPIC_DIVERSIFICATION=true
ENTERTAINMENT_FIRST=true

# ===== COMMUNITY & CULT SETTINGS =====
# Generic community management
COMMUNITY_INITIATION_ENABLED=true
WEEKLY_EVENTS_ENABLED=true
HIERARCHY_SYSTEM_ENABLED=true
GAMIFICATION_ENABLED=true

# Roles and Permissions
ADMIN_ROLES=admin,moderator
USER_ROLES=member,initiate,veteran
PERMISSIONS_ENABLED=true

# ===== FEATURES & CAPABILITIES =====
# ElizaOS Features
MEMORY_SYSTEM_ENABLED=true
MAX_WORKING_MEMORY_ENTRIES=50
KNOWLEDGE_BASE_ENABLED=true
LOAD_DOCS_ON_STARTUP=true

# Advanced Features
AUTONOMOUS_POSTING=false
AUTO_REPLY_ENABLED=false
SENTIMENT_ANALYSIS=true
CONTENT_MODERATION=true

# ===== MONITORING & ANALYTICS =====
# Logging
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
LOG_RETENTION_DAYS=30

# Analytics
ANALYTICS_ENABLED=true
METRICS_COLLECTION=true
PERFORMANCE_MONITORING=true

# ===== DEVELOPMENT & DEBUGGING =====
# Development Tools
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false

# Testing
TEST_MODE=false
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db
INTEGRATION_TESTS_ENABLED=true

# ===== OPTIONAL INTEGRATIONS =====
# Blockchain & Web3
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
WEB3_ENABLED=false

# External APIs
WEATHER_API_KEY=your-weather-api-key
NEWS_API_KEY=your-news-api-key
GIPHY_API_KEY=your-giphy-api-key

# File Storage
CLOUD_STORAGE_ENABLED=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=your-s3-bucket

# ===== RATE LIMITING & PERFORMANCE =====
# API Rate Limits
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
CACHE_ENABLED=true
CACHE_TTL=300
CONNECTION_POOL_SIZE=10

# ===== NOTIFICATIONS & ALERTS =====
# Health Monitoring
HEALTH_CHECK_ENABLED=true
UPTIME_MONITORING=false
ERROR_NOTIFICATIONS=false

# Email Configuration (optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# ===== BACKUP & RECOVERY =====
# Database Backups
AUTO_BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=7

# ===== CUSTOM CONFIGURATION =====
# Add your custom environment variables here
CUSTOM_FEATURE_ENABLED=false
CUSTOM_API_ENDPOINT=https://your-custom-api.com
CUSTOM_WEBHOOK_URL=https://your-webhook-endpoint.com
